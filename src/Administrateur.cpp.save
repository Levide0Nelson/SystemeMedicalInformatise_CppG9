Administrateur::Administrateur(int idAdmin, const std::string& nomAdmin, const std::string& prenomAdmin, const std::string& loginAdmin,
                       const std::string& mdpAdmin, bool accessMedical)
                       : Utilisateur(idAdmin,nomAdmin,prenomAdmin,loginAdmin,mdpAdmin,"Administrateur"),
                         m_peutAccederDonneesMedicales(accessMedical)
{

}

std::string Administrateur::toCSV() const
{
    return std::to_string(m_idCompteUser) + ";" + m_nomUser + ";" + m_prenomUser + ";" + m_loginUser + ";" + m_motDePasseUser + ";Administrateur";
}

